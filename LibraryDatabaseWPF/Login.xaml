<Window x:Class="LibraryDatabaseWPF.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryDatabaseWPF"
        mc:Ignorable="d"
        Title="Login" Height="320" Width="300" Background="Black">
    <StackPanel Margin="20">
        <Label Content="Login" Foreground="White" Background="Black" FontSize="25" HorizontalAlignment="Center"/>
        <Separator></Separator>
        <Label Content="Username" Foreground="White"/>
        <TextBox Name="textboxUsername" Background="#545d6a" Foreground="White" FontSize="18"/>
        <Label Content="Password" Foreground="White"/>
        <PasswordBox Name="textboxPassword" Background="#545d6a" Foreground="White" FontSize="18"/>
        <Button Name="buttonSubmit" Click="buttonSubmit_Click" Content="Submit" Margin="60 10" Background="#545d6a" Foreground="White"/>
    </StackPanel>
</Window>
