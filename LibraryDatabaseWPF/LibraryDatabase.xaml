<Page x:Class="LibraryDatabaseWPF.LibraryDatabase"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryDatabaseWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LibraryDatabase">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox>
            
        </ListBox>
        <StackPanel Grid.Column="1">
            <TextBox Name="uxSearchText"></TextBox>
            <StackPanel Orientation="Horizontal" Height="35" VerticalAlignment="Top" HorizontalAlignment="Center">
                <ComboBox IsReadOnly="True">
                    <RadioButton Content="All"  IsChecked="True"/>
                    <RadioButton Content="Title"/>
                    
                </ComboBox>
                <Button Click="OnSearch_Click" Margin="10,0,10,0" Width="80">Search</Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="35" VerticalAlignment="Top" HorizontalAlignment="Center">
                <Button Click="OnAddBook_Click" Margin="10,0,10,0" Width="80">Add Book</Button>
                <Button Click="OnEditBook_Click" Margin="10,0,10,0" Width="80">Edit Book</Button>            
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
